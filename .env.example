# Server Configuration
NODE_ENV=development
PORT=5000

# Client Configuration
CLIENT_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/puzzleverse

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@puzzleverse.com
FROM_NAME=PuzzleVerse

# API Documentation
API_DOCS_URL=http://localhost:5000/api-docs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Security
XSS_PROTECTION=true
NO_CACHE=true
CONTENT_SECURITY_POLICY=true
HIDE_POWERED_BY=true
FRAMEGUARD_ACTION="DENY"

# Other environment variables can be added here as needed
